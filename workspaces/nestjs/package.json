{
  "name": "@monorepo/nestjs",
  "version": "1.0.0",
  "description": "MonoRepo for NestJs",
  "author": "sooyoung.hyun@dsrvlabs.com",
  "private": true,
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -e .env nest start",
    "start:dev": "dotenv -e .env nest start --watch",
    "start:debug": "dotenv -e .env nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.31.0",
    "@cosmjs/stargate": "^0.31.0",
    "@nestjs/common": "^9.1.4",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.4",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/typeorm": "^9.0.1",
    "adm-zip": "^0.5.9",
    "aws-sdk": "^2.1238.0",
    "date-utils": "^1.2.21",
    "dotenv": "^16.0.2",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tedious": "^11.0.9",
    "typeorm": "^0.3.12",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-test-transactions": "^3.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.4",
    "@nestjs/testing": "^9.1.4",
    "@types/express": "^4.17.14",
    "@types/jest": "^26.0.24",
    "@types/node": "^18.16.0",
    "@types/supertest": "^2.0.10",
    "@types/tedious": "^4.0.3",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.0.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.8.4",
    "dotenv-cli": "^3.2.0",
    "@types/adm-zip": "^0.5.0",
    "@types/form-data": "^2.5.0",
    "@types/lodash": "^4.14.170"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
